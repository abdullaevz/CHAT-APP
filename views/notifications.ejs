    <!-- Inbox Container -->
    <div class="inbox-container">
        <div class="inbox-header">
            Notifications - <span class="logged-in-user" onclick="window.location.href='/profile'">
                <%= loggedUser %>
            </span>
            <!-- Notification Button -->
            <button class="notification-btn" onclick="window.open('/notifications/<%= logID %>', '_blank')">üîî
                Notification</button>
        </div>

        <!-- Message List -->
        <ul class="message-list">
            <% nameList?.forEach(function(sender) { %>
                <li>
                    <%= sender %> wants to be friend with you
                        <div>
                            <button class="delete-btn" onclick="deleteMessage('<%= sender %>')">Delete</button>
                            <button class="accept-btn" onclick="acceptMessage('<%= sender %>')">Accept</button>
                        </div>
                </li>
                <% }); %>
        </ul>
    </div>

    <!-- Settings and Logout -->
    <div class="settings-logout">
        <a href="/settings/<%= logID %>" class="settings-icon">‚öôÔ∏è Settings</a>
        <a href="/logout" class="logout-icon">üö™ Log out</a>
    </div>

    <script>
        function deleteMessage(sender) {
            fetch('/reject-request', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ log_id: "<%= logID %>", sender , request_status:false }),
            })
                .then(response => {
                    if (response.ok) {
                        alert('Notification successfully deleted!');
                        location.reload();
                    } else {
                        alert('Something went wrong, notification not deleted!');
                    }
                });
        }

        function acceptMessage(sender) {
            fetch('/accept-request', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ log_id: "<%= logID %>", sender ,request_status:true}),
            })
                .then(response => {
                    if (response.ok) {
                        alert('Message accepted!');
                        location.reload();
                    } else {
                        alert('Something went wrong, message not accepted!');
                    }
                });
        }

